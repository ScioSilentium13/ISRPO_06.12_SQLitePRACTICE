<Window
    x:Class="WarehouseApp.ProductDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Товар"
    Width="400"
    Height="300"
    WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,5"
            Text="Название:" />
        <TextBox
            x:Name="txtName"
            Grid.Row="1"
            Margin="0,0,0,10" />

        <TextBlock
            Grid.Row="2"
            Margin="0,0,0,5"
            Text="Цена:" />
        <TextBox
            x:Name="txtPrice"
            Grid.Row="3"
            Margin="0,0,0,10" />

        <TextBlock
            Grid.Row="4"
            Margin="0,0,0,5"
            Text="Количество:" />
        <TextBox
            x:Name="txtQuantity"
            Grid.Row="5"
            Margin="0,0,0,10" />

        <TextBlock
            Grid.Row="6"
            Margin="0,0,0,5"
            Text="Описание:" />
        <TextBox
            x:Name="txtDescription"
            Grid.Row="7"
            Margin="0,0,0,10" />

        <StackPanel
            Grid.Row="8"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="btnOk"
                Width="80"
                Height="30"
                Margin="5"
                Click="BtnOk_Click"
                Content="OK"
                IsDefault="True" />
            <Button
                Width="80"
                Height="30"
                Margin="5"
                Click="BtnCancel_Click"
                Content="Отмена"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>