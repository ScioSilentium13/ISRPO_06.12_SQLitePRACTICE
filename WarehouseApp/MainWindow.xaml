<Window
    x:Class="WarehouseApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Складской учет"
    Width="830"
    Height="500">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="10"
            Background="#f0f0f0"
            Orientation="Horizontal">
            <Button
                x:Name="btnAdd"
                Margin="5"
                Padding="10,5"
                Click="BtnAdd_Click"
                Content="Добавить товар" />
            <Button
                x:Name="btnEdit"
                Margin="5"
                Padding="10,5"
                Click="BtnEdit_Click"
                Content="Изменить" />
            <Button
                x:Name="btnDelete"
                Margin="5"
                Padding="10,5"
                Click="BtnDelete_Click"
                Content="Удалить" />
            <Button
                x:Name="btnRefresh"
                Margin="5"
                Padding="10,5"
                Click="BtnRefresh_Click"
                Content="Обновить" />
        </StackPanel>

        <DataGrid
            x:Name="dataGrid"
            Grid.Row="1"
            Margin="10"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding Id}"
                    Header="ID" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding Name}"
                    Header="Название" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Price}"
                    Header="Цена" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Quantity}"
                    Header="Количество" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Description}"
                    Header="Описание" />
            </DataGrid.Columns>
        </DataGrid>

        <Border
            Grid.Row="2"
            Margin="10"
            Padding="10"
            BorderBrush="Gray"
            BorderThickness="0,1,0,0">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="Движение товара:" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        Text="Товар:" />
                    <TextBlock
                        x:Name="txtSelectedProduct"
                        Margin="0,0,20,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="Не выбран" />

                    <RadioButton
                        x:Name="rbIn"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Content="Приход"
                        GroupName="MovementType"
                        IsChecked="True" />
                    <RadioButton
                        x:Name="rbOut"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Content="Расход"
                        GroupName="MovementType" />

                    <TextBlock
                        Margin="20,0,5,0"
                        VerticalAlignment="Center"
                        Text="Количество:" />
                    <TextBox
                        x:Name="txtQuantity"
                        Width="100"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="1" />
                    <TextBox
                        x:Name="txtNotes"
                        Width="200"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="Примечание" />

                    <Button
                        x:Name="btnProcess"
                        Padding="10,5"
                        VerticalAlignment="Center"
                        Click="BtnProcess_Click"
                        Content="Выполнить" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>